<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
  url(<% if @list.poster.attached? %>
      '<%= cl_image_path @list.poster.key, crop: :fill %>'
    <% else %>
      https://source.unsplash.com/random
    <% end %>)">
  <div class="center">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between">
    <%= link_to "edit list", edit_list_path(@list), class: "btn btn-flat-pink mb-3" %>
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-flat mb-3" %>
  </div>

  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      Breakfast
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
      Lunch
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
      Dinner
    </div>

    <% @list.movies.each do |movie| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url(<% if movie.poster_url %>
        <%= movie.poster_url %>
      <% else %>
        https://source.unsplash.com/random
      <% end %>)">
        <%= movie.title %>
      </div>
    <% end %>
  </div>
</div>
